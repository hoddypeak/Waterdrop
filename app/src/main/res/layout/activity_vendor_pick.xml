<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="number.android.waterdrop.activities.VendorPickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/existing_vendor_intent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vendors"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/empty"
            android:text="No vendor found"
            android:gravity="center"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/existing_vendor_intent"
        android:text="@string/current_vendor_intent"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_above="@+id/wave" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wave"
        android:id="@+id/wave"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_continue"
            android:clickable="true"
            android:text="@string/btn_continue"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawablePadding="4dip"
            android:paddingTop="@dimen/dp40"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>
